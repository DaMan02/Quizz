<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.dayal.quizz.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_margin="30dp"
        android:id="@+id/timerID"
        android:text="2:00"
        android:textColor="#ff0004"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/quesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/timerID"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_margin="4dp"
            android:text="Question will appear here" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quesID"
            android:id="@+id/radiogpID"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Option 1"
                android:layout_margin="2dp"/>
            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Option 2"
                android:layout_margin="2dp"/>
            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Option 3"
                android:layout_margin="2dp"/>
            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Option 4"
                android:layout_margin="2dp"/>
        </RadioGroup>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/prevBtn"
            android:layout_below="@id/radiogpID"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"/>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/submit_btn"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="30dp"
           android:text="SUBMIT"
           android:layout_below="@id/radiogpID"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextBtn"
            android:layout_marginTop="30dp"
            android:text="NEXT"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/radiogpID"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>